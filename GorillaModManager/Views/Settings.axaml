<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
			 xmlns:vm="using:GorillaModManager.ViewModels"
             x:Class="GorillaModManager.Views.Settings"
			 x:DataType="vm:MainWindowViewModel">

	<StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="475">
		<Border Background="#2E2E2E"
				BorderBrush="#1F1F1F"
				BorderThickness="5"
				CornerRadius="5"
				Margin="0 2">
			<WrapPanel>
				<TextBlock Margin="7 5" Text="BepInEx" FontSize="18"/>
				<TextBox Margin="5" Name="GorilaPath" Watermark="Gorilla Tag Path" Width="400"/>
				<Button Margin="5" Name="PathButton" Click="OnPathButtonClick">...</Button>
				<Button Margin="5" Name="InstallButton" Click="BepInExButtons">Install BepInEx</Button>
				<Button Margin="5" Name="UninstallButton" Click="BepInExButtons">Uninstall BepInEx</Button>
				<Button Margin="5" Name="ToggleBepInEx" Click="BepInExButtons">Disable BepInEx</Button>
			</WrapPanel>
		</Border>
	</StackPanel>
</UserControl>
